<% layout('layouts/boilerplate.ejs') %>
<h1>Show Details</h1>
<img src="<%= campground.image %> " alt="campground_image" />
<h2><%= campground.title %></h2>
<h3><%= campground.location %></h3>
<h4><%= campground.price %></h4>
<p><%= campground.description %></p>
<div>
  <a href="/campgrounds/<%= campground._id %>/edit ">Edit the details</a>
</div>
<form action="/campgrounds/<%= campground.id %>?_method=DELETE " method="post">
  <button>Delete the campground</button>
</form>
<div>
  <a href="/campgrounds">Back to All campground</a>
</div>
